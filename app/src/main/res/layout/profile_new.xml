<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/barcodeButton"
        android:layout_alignParentEnd="true"
        android:src="@drawable/barcode"
        android:background="#00000000"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/constraintLayout5"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/barcodeButton"
        android:layout_marginRight="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/anne"
            android:id="@+id/propic"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Susan Bernando"
            android:textStyle="bold"
            android:textColor="#000"
            app:layout_constraintTop_toTopOf="@+id/propic"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toRightOf="@+id/propic"
            android:layout_marginLeft="8dp"
            android:id="@+id/name"
            android:layout_marginStart="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="susan@gmail.com"
            android:textSize="12sp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintLeft_toRightOf="@+id/propic"
            android:layout_marginLeft="8dp"
            android:id="@+id/mail"
            android:layout_marginStart="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08988888122"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/propic"
            android:layout_marginLeft="8dp"
            android:id="@+id/phone"
            app:layout_constraintTop_toBottomOf="@+id/mail"
            android:layout_marginStart="8dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jl. Cilandak Block A1, No.21"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/propic"
            android:layout_marginLeft="8dp"
            android:id="@+id/address"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            android:layout_marginStart="8dp" />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.constraint.ConstraintLayout
                android:id="@+id/cl_editProfile"
                android:paddingBottom="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_square_grey"
                android:layout_marginTop="24dp"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent">
                <android.support.constraint.ConstraintLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/cl_changeName"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_change_name"
                        android:id="@+id/imageView9"
                        tools:layout_constraintTop_creator="1"
                        tools:layout_constraintLeft_creator="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="@+id/textView7"
                        app:layout_constraintBottom_toBottomOf="@+id/textView7"
                        app:layout_constraintVertical_bias="0.444" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Name"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/imageView9"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintVertical_bias="0.428"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/textView7" />
                </android.support.constraint.ConstraintLayout>
                <ImageView
                    android:id="@+id/iv_lineChangeName"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#1212"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cl_changeName" />

                <android.support.constraint.ConstraintLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/cl_changeEmail"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="@id/iv_lineChangeName"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_change_email"
                        android:id="@+id/ic_changeEmail"
                        tools:layout_constraintTop_creator="1"
                        tools:layout_constraintLeft_creator="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView8"
                        app:layout_constraintTop_toTopOf="@+id/textView8"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Email"
                        app:layout_constraintLeft_toRightOf="@+id/ic_changeEmail"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/textView8" />
                </android.support.constraint.ConstraintLayout>
                <ImageView
                    android:id="@+id/iv_lineChangeEmail"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#1212"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cl_changeEmail" />

                <android.support.constraint.ConstraintLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/cl_changePhone"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="@id/iv_lineChangeEmail"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_change_phone"
                        android:id="@+id/ic_changePhone"
                        tools:layout_constraintTop_creator="1"
                        tools:layout_constraintLeft_creator="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="@+id/textView9"
                        app:layout_constraintBottom_toBottomOf="@+id/textView9"
                        app:layout_constraintVertical_bias="0.526"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Phone Number"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ic_changePhone"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        android:id="@+id/textView9" />
                </android.support.constraint.ConstraintLayout>
                <ImageView
                    android:id="@+id/iv_lineChangePhone"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#1212"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cl_changePhone" />

                <android.support.constraint.ConstraintLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/cl_changeAddress"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="@id/iv_lineChangePhone"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_change_address"
                        android:id="@+id/ic_changeAddress"
                        tools:layout_constraintTop_creator="1"
                        tools:layout_constraintLeft_creator="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="@+id/textView10"
                        app:layout_constraintBottom_toBottomOf="@+id/textView10"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Address"
                        app:layout_constraintLeft_toRightOf="@+id/ic_changeAddress"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/textView10" />
                </android.support.constraint.ConstraintLayout>
                <ImageView
                    android:id="@+id/iv_lineChangeAddress"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#1212"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cl_changeAddress" />

                <android.support.constraint.ConstraintLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/cl_changePassword"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="@id/iv_lineChangeAddress"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_change_password"
                        android:id="@+id/ic_changePassword"
                        tools:layout_constraintTop_creator="1"
                        tools:layout_constraintLeft_creator="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="@+id/textView11"
                        app:layout_constraintBottom_toBottomOf="@+id/textView11"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ic_changePassword"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/textView11" />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                android:paddingBottom="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/outline_square_grey"
                android:layout_marginTop="23dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_editProfile"
                tools:layout_constraintLeft_creator="1"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/constraintLayout6">

                <android.support.constraint.ConstraintLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/cl_viewPolicy"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_change_privacy"
                        android:id="@+id/ic_viewPolicy"
                        tools:layout_constraintTop_creator="1"
                        tools:layout_constraintLeft_creator="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView12"
                        app:layout_constraintTop_toTopOf="@+id/textView12"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Poliy"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ic_viewPolicy"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/textView12" />
                </android.support.constraint.ConstraintLayout>
                <ImageView
                    android:id="@+id/iv_viewPolicy"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="#1212"
                    tools:layout_constraintLeft_creator="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/cl_viewPolicy"
                    />

                <android.support.constraint.ConstraintLayout
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:id="@+id/cl_viewTerm"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="@id/iv_viewPolicy"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_change_term"
                        android:id="@+id/ic_viewTerm"
                        tools:layout_constraintTop_creator="1"
                        tools:layout_constraintLeft_creator="1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toTopOf="@+id/textView13"
                        app:layout_constraintBottom_toBottomOf="@+id/textView13"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Term and Condition"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@+id/ic_viewTerm"
                        android:layout_marginLeft="18dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/textView13" />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <TextView
                android:id="@+id/btn_signout"
                android:background="@drawable/outline_square_grey"
                android:padding="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textColor="@color/colorPrimary"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>