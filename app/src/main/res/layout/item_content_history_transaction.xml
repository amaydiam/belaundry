<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_inprogress"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout2"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <android.support.constraint.ConstraintLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintRight_toLeftOf="@+id/status_transaction"
        android:id="@+id/constraintLayout2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:background="#1212"
            android:layout_width="1dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout2"
            android:orientation="horizontal"></LinearLayout>
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            android:id="@+id/imageView2"
            app:layout_constraintLeft_toRightOf="@+id/linearLayout2" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="October, 20 2016"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            android:layout_marginTop="0dp"
            android:id="@+id/tv_time_transaction"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Hario Noviyanto"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_time_transaction"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cilandak, Jakarta selatan"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="085782055600"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/address"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/title_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Rp."
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView2"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/phone" />
        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="10.000.000"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/title_price"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/phone"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1212"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintLeft_toLeftOf="parent"></LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/status_transaction" />

</android.support.constraint.ConstraintLayout>