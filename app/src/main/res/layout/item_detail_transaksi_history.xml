<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title item Transaksi"
        android:id="@+id/titleItemTransaksi"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="item transaksi"
        android:id="@+id/itemTransaksi"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titleItemTransaksi"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Package Service Transaksi"
        android:id="@+id/packageServiceItemTraksi"
        app:layout_constraintTop_toBottomOf="@id/itemTransaksi"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Note."
        android:id="@+id/titleNote"
        app:layout_constraintTop_toBottomOf="@id/packageServiceItemTraksi"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="desc note transaksi"
        android:id="@+id/noteItemTransaksi"
        app:layout_constraintTop_toBottomOf="@id/titleNote"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rp."
        android:id="@+id/titleRP"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintRight_toLeftOf="@+id/feeItemTransaksi"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/titleNote"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10.000.000"
        android:id="@+id/feeItemTransaksi"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleNote"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#2121"
        app:layout_constraintTop_toBottomOf="@+id/feeItemTransaksi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />
    
</android.support.constraint.ConstraintLayout>